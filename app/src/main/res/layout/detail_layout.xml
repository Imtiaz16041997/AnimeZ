<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMiscellaneous"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/animecvr" />

        <androidx.cardview.widget.CardView
            android:id="@+id/posterId"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3fff"
                android:src="@drawable/lady" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/posterId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="178dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Naruto"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/posterId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Duration"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_Episode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Episode"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textAlignment="center"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/textView_Year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2022"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textAlignment="center"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="normal"
                android:text="Synopsis"
                android:textColor="@color/greenish"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Hello is there lmlmsn mlksnd  \n kndknkdkdlklkmlsdnmsdknsdahsdbjasdjk
               \n sdsojsdnsdsdkkskndknskdk \n
             dhsksdjosjdosj"
                android:padding="8dp"
                android:textAlignment="textStart" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Genre: "/>

        <TextView
            android:id="@+id/textView_Genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Naruto " />


    </LinearLayout>


</LinearLayout>